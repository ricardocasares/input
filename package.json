{
  "name": "input",
  "version": "1.0.0",
  "private": true,
  "description": "Input monorepo",
  "homepage": "https://github.com/ricardocasares/input#readme",
  "bugs": {
    "url": "https://github.com/ricardocasares/input/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ricardocasares/input.git"
  },
  "author": "Ricardo Casares (https://analogic.al)",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "format": "npx prettier --write **/*.{js}",
    "release": "npx semantic-release",
    "start": "run-p hasura application",
    "hasura": "run-s hasura:*",
    "hasura:docker": "docker-compose -f packages/hasura/docker-compose.yml up -d",
    "hasura:console": "hasura console --admin-secret secret --project ./packages/hasura/",
    "application": "now dev"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js}": [
      "npm run prettier",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/node": "^12.0.7",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "npm-run-all": "^4.1.5"
  },
  "release": {
    "plugins": [
      "@semantic-release/github",
      "@semantic-release/release-notes-generator"
    ]
  }
}
